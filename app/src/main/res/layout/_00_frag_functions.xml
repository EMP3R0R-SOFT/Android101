<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/Layoutheader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/shitLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/logo_1"
            android:transitionName="shitAnim" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Layoutheader1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/homepage_style_texts"
                    android:text="ذخیره سازی و انتقال اطلاعات" />


                <Button

                    android:id="@+id/button1"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="1 - Shared Preferences" />

                <Button
                    android:id="@+id/button2"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="2 - Use Class 1" />

                <Button
                    android:id="@+id/button3"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="3 - Use Class 2" />

                <Button
                    android:id="@+id/button8"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="8 - Pass Data (using intent)" />

                <Button
                    android:id="@+id/button16"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="16 - Read/Write to SD/Internal Storage" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/homepage_style_texts"
                    android:text="لیست سازی و جدول کشی" />


                <Button
                    android:id="@+id/button4"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="4 - List View" />


                <Button
                    android:id="@+id/button7"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="7 - Dynamic Buttons" />

                <Button
                    android:id="@+id/button10"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="10 - Simple ListView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/homepage_style_texts"
                    android:text="انیمیشن و موشن" />


                <Button
                    android:id="@+id/button12"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="12 - Shared Element Activity Transition" />

                <Button
                    android:id="@+id/button13"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="13 - Login UI"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/homepage_style_texts"
                    android:text="پردازش پس زمینه" />

                <Button
                    android:id="@+id/button6"
                    style="@style/homepage_style_btn"
                    android:text="6 - Async Task"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button15"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="15 - Job Scheduler (Service)"
                    android:textAllCaps="false" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/homepage_style_texts"
                    android:text="اینترنت" />

                <Button
                    android:id="@+id/button17"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="17 - json (volley library)"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button18"
                    style="@style/homepage_style_btn"
                    android:onClick="btn_Click"
                    android:text="18 - toDo from JSON"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/homepage_style_texts"
                    android:text="سایر" />


                <Button
                    android:id="@+id/button5"
                    style="@style/homepage_style_btn"
                    android:text="5 - Dialog Alert"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/button9"
                    style="@style/homepage_style_btn"
                    android:text="9 - Send Email"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/button11"
                    style="@style/homepage_style_btn"
                    android:text="11 - Play Video"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/button14"
                    style="@style/homepage_style_btn"
                    android:text="14 - Miladi be Shamsi"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/button19"
                    style="@style/homepage_style_btn"
                    android:text="19 - Notification"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button20"
                    style="@style/homepage_style_btn"
                    android:text="Empty"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button21"
                    style="@style/homepage_style_btn"
                    android:text="Empty"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button22"
                    style="@style/homepage_style_btn"
                    android:text="Empty"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button23"
                    style="@style/homepage_style_btn"
                    android:text="Empty"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button24"
                    style="@style/homepage_style_btn"
                    android:text="Empty"
                    android:onClick="btn_Click"
                    android:textAllCaps="false" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>


