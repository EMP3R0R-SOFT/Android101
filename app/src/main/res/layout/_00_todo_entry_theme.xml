<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todo_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/theme_dark_1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/todo_touch_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_todo_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"

                android:background="@drawable/btn_todo_top_left"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="toDo Title"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/btn_todo_top_right"

                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:paddingRight="15dp"


                >

                <TextView
                    android:id="@+id/txt_todo_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="1397/5/23"
                    android:textColor="@color/light_gray"
                    android:textSize="10sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_todo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="11:35 PM"
                    android:textColor="@color/light_gray"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99B9B9B9" />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:background="#99B9B9B9" />-->

        <TextView
            android:id="@+id/txt_todo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"

            android:text="@string/test_text_big"
            android:textColor="@color/light_gray"
            android:textDirection="firstStrongLtr"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99B9B9B9" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/btn_todo_complete_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_todo_buttom_left"
            android:gravity="center">

            <!--<android.support.v7.widget.AppCompatCheckBox-->
            <!--android:id="@+id/btn_todo_complete"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="fill_parent"-->

            <!--android:buttonTint="@color/btn_color_1"-->
            <!--android:text="DONE"-->
            <!--android:textColor="@color/btn_color_1"-->
            <!--android:textSize="10sp"-->
            <!--android:textStyle="bold"-->
            <!--/>-->

            <RadioButton
                android:id="@+id/btn_todo_complete"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                android:buttonTint="@color/btn_color_1"
                android:text="DONE"
                android:textColor="@color/btn_color_1"
                android:textSize="10sp"
                android:textStyle="bold"

                />

        </LinearLayout>


        <Button
            android:id="@+id/btn_todo_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@drawable/btn_todo_button"
            android:text="Edit"
            android:textAlignment="center"
            android:textColor="@color/btn_color_1"
            android:textSize="10sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_todo_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@drawable/btn_todo_buttom_right"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/btn_color_1"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>