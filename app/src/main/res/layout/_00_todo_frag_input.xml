<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true"

    tools:context="._0_HomePage.toDo_frag_input">

    <!--clickale true vase inke ro jaye shishei click kardi, activity poshti click nakhore-->


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_gravity="center"
        android:layout_margin="10dp"

        android:background="@drawable/theme_dark_1"
        android:orientation="vertical">


        <EditText
            android:id="@+id/_00_input_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/btn_todo_top_right_left"

            android:hint="Title"

            android:inputType="textCapSentences"
            android:paddingTop="10dp"


            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/btn_color_1"
            android:textColorHint="#66949494"
            android:textSize="18sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99B9B9B9" />


        <EditText
            android:id="@+id/_00_input_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="start"

            android:clickable="true"
            android:focusableInTouchMode="true"

            android:hint="Description"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="15dp"
            android:textColor="@color/btn_color_1"
            android:textColorHint="#66949494"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#99B9B9B9" />

        <LinearLayout
            android:id="@+id/_00_down_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/_00_btn_save"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="1dp"

                android:layout_marginBottom="1dp"
                android:layout_weight="1"


                android:background="@drawable/btn_todo_buttom_left"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginTop="1dp"-->
            <!--android:layout_marginBottom="1dp"-->
            <!--android:background="#99B9B9B9" />-->

            <Button
                android:id="@+id/_00_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="1dp"

                android:layout_marginBottom="1dp"
                android:layout_weight="1"

                android:background="@drawable/btn_todo_buttom_right"
                android:text="Cancel"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>