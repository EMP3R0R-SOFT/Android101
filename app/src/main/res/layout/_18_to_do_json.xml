<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="._18_toDo._18_toDo_json">

    <RelativeLayout
        android:id="@+id/todo_layout_for_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/_18_todo_rview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_centerVertical="true"
            android:layout_marginBottom="61dp"

            android:scrollbars="vertical" />


        <ProgressBar
            android:id="@+id/_18_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@id/_18__down_layout"
            android:layout_marginBottom="-7dp"
            android:indeterminate="true"
            android:visibility="visible" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/_18__down_layout"
            android:background="#99B9B9B9" />

        <LinearLayout
            android:id="@+id/_18__down_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black60"
            android:divider="#fff"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/_18__btn_newToDo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                android:background="@drawable/btn_todo_button"
                android:text="New"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/_18__btn_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                android:background="@drawable/btn_todo_button"
                android:text="Test"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/_18__btn_savelist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                android:background="@drawable/btn_todo_button"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/_18__btn_loadlist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                android:background="@drawable/btn_todo_button"
                android:text="Load"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"

                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/_18_input_fragment_container_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
</RelativeLayout>