<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:orientation="vertical"
    android:background="#5085A4"
    >

    <TextView
        android:id="@+id/text_view_expanded"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:padding="8dp"
        android:text="custom notification"
        android:textAlignment="center"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/image_view_expanded"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_gravity="center"

        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lichking" />

    <Button
        android:id="@+id/_19_custom_notifi_btn"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/theme_dark_1"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:text="Hi :)"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="#FFF" />

</LinearLayout>