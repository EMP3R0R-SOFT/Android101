<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="._18_toDo._19_ToDo_Frag_input">

    <!--clickale true vase inke ro jaye shishei click kardi, activity poshti click nakhore-->

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_gravity="center"

        android:background="@drawable/theme_dark_1"
        android:orientation="vertical">



        <EditText
            android:id="@+id/todo_frag_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            android:background="@drawable/btn_theme_4"

            android:hint="Title"
            android:paddingTop="10dp"

            android:paddingBottom="10dp"

            android:inputType="textCapSentences"
            android:textAlignment="center"
            android:textColor="@color/btn_color_1"
            android:textColorHint="#66949494"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/todo_frag_input_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"


            android:background="@drawable/theme_dark_1"
            android:gravity="start"
            android:hint="Description"

            android:inputType="textCapSentences"
            android:padding="15dp"
            android:textColor="@color/btn_color_1"
            android:textColorHint="#66949494"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/todo_down_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >



            <Button
                android:id="@+id/toDO__frag_btn_save"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:layout_margin="10dp"

                android:background="@drawable/theme_dark_1_transparent"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/toDO__frag_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:layout_margin="10dp"

                android:background="@drawable/theme_dark_1_transparent"
                android:text="Cancel"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"
                android:textStyle="bold" />



        </LinearLayout>

    </LinearLayout>

</FrameLayout>