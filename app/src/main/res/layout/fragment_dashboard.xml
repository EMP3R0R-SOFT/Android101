<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android101.fragments.Dashboard">

    <LinearLayout
        android:id="@+id/navdraw1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_1"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Abraham Chanani"
            android:layout_gravity="center"
            android:textColor="@color/btn_color_1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Abraham.chanani@Live.com"
            android:layout_gravity="center"
            android:textColor="@color/btn_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/btn_theme_4"
            android:textColor="#BDBDBD"
            android:text="Telegram"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_theme_4"
            android:textColor="#BDBDBD"
            android:text="Email"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_theme_4"
            android:textColor="#BDBDBD"
            android:text="Website"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_theme_4"
            android:textColor="#BDBDBD"
            android:text="Sign Out"
            android:textAllCaps="false"
            />

    </LinearLayout>

</FrameLayout>
