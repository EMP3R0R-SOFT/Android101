<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall_blur_1"
        android:fitsSystemWindows="true"
        tools:context="com.example.android101.Login_Page"
        >

        <View
            android:id="@+id/view_reveal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wall_blur_2"
            android:visibility="invisible"
            android:fitsSystemWindows="true"
            >
        </View>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container1"

    >


        <ImageView
        android:id="@+id/logo_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/logo_1"
            android:transitionName="shitAnim"
            app:layout_collapseMode="parallax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_logo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="252dp"
            android:text="@string/android_101_tutorial"
            android:textColor="@color/btn_color_1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:transitionName="shitAnim2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/btn_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_username_1"
        android:gravity="center_vertical"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:textColorHint="#99FFFFFF"
        android:textColor="#99FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/btn_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_password_1"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:textColor="#99FFFFFF"
        android:textColorHint="#99FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Create new account"
        android:textColor="#99FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />



        <FrameLayout
            android:id="@+id/btn_login"
            android:layout_width="270dp"
            android:layout_height="44dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btn_theme_login"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/btn_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textColor="#BAB3C4"
                android:alpha="0.8"
                android:layout_gravity="center"
                />

            <ProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                />

        </FrameLayout>






    </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</layout>