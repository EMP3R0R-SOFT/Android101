<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall_blur_3"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:translationX="-415dp"
            android:id="@+id/navdraw1"
            android:layout_width="415dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/me_1"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Abraham Chanani"
                android:layout_gravity="center"
                android:textColor="@color/btn_color_1"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Abraham.chanani@Live.com"
                android:layout_gravity="center"
                android:textColor="@color/btn_color_1"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/btn_theme_4"
                android:textColor="#BDBDBD"
                android:text="Telegram"
                android:textAllCaps="false"
                />

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_theme_4"
                android:textColor="#BDBDBD"
                android:text="Email"
                android:textAllCaps="false"
                />

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_theme_4"
                android:textColor="#BDBDBD"
                android:text="Website"
                android:textAllCaps="false"
                />

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_theme_4"
                android:textColor="#BDBDBD"
                android:text="Sign Out"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/homepage_screen"
            android:layout_width="415dp"
            android:layout_height="match_parent"
            android:translationX="-415dp">

            <LinearLayout
                android:id="@+id/Layoutheader1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#99000000">


                <ImageView
                    android:id="@+id/shitLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/logo_1"
                    android:transitionName="shitAnim" />
            </LinearLayout>


            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Layoutheader1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/homepage_style_texts"
                            android:text="ذخیره سازی و انتقال اطلاعات" />


                        <Button

                            android:id="@+id/button1"
                            style="@style/homepage_style_btn"
                            android:text="Shared Preferences" />

                        <Button
                            android:id="@+id/button2"
                            style="@style/homepage_style_btn"
                            android:text="Use Class 1" />

                        <Button
                            android:id="@+id/button3"
                            style="@style/homepage_style_btn"
                            android:text="Use Class 2" />

                        <Button
                            android:id="@+id/button8"
                            style="@style/homepage_style_btn"
                            android:text="Pass Data (using intent)" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/homepage_style_texts"
                            android:text="لیست سازی و جدول کشی" />


                        <Button
                            android:id="@+id/button4"
                            style="@style/homepage_style_btn"
                            android:text="List View" />


                        <Button
                            android:id="@+id/button7"
                            style="@style/homepage_style_btn"
                            android:text="Dynamic Buttons" />

                        <Button
                            android:id="@+id/button10"
                            style="@style/homepage_style_btn"
                            android:text="Simple ListView" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/homepage_style_texts"
                            android:text="انیمیشن و موشن" />


                        <Button
                            android:id="@+id/button12"
                            style="@style/homepage_style_btn"
                            android:text="Shared Element Activity Transition" />

                        <Button
                            android:id="@+id/button13"
                            style="@style/homepage_style_btn"
                            android:text="Login UI"
                            android:textAllCaps="false" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/homepage_style_texts"
                            android:text="سایر" />


                        <Button
                            android:id="@+id/button5"
                            style="@style/homepage_style_btn"
                            android:text="Dialog Alert"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/button6"
                            style="@style/homepage_style_btn"
                            android:text="Async Task"
                            android:textAllCaps="false" />


                        <Button
                            android:id="@+id/button9"
                            style="@style/homepage_style_btn"
                            android:text="Send Email"
                            android:textAllCaps="false" />


                        <Button
                            android:id="@+id/button11"
                            style="@style/homepage_style_btn"
                            android:text="Play Video"
                            android:textAllCaps="false" />


                        <Button
                            android:id="@+id/button14"
                            style="@style/homepage_style_btn"
                            android:text="Empty"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/button15"
                            style="@style/homepage_style_btn"
                            android:text="Empty"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/button16"
                            style="@style/homepage_style_btn"
                            android:text="Empty"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/button17"
                            style="@style/homepage_style_btn"
                            android:text="Empty"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/button18"
                            style="@style/homepage_style_btn"
                            android:text="Empty"
                            android:textAllCaps="false" />


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/BottomNav1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_navigation"
        app:itemIconTint="#99FFFFFF"
        app:itemTextColor="#99FFFFFF"
        app:menu="@menu/nav_item"/>


</RelativeLayout>


