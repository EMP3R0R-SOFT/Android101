<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->

        <!--تنظیم انیمیشن اکتیویتی ها در کل برنامه-->
        <!--در پایین اومده-->
        <!--<item name="android:windowAnimationStyle">@style/App_Activity_Anim</item>-->

        <!--شفاف شدن استاتوس بار و نویگیشن بار-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!--نمیدونم-->
        <!--<item name="android:windowIsTranslucent">true</item>-->

        <!--بکگراند پیشفرض کل برنامه-->
        <item name="android:windowBackground">@drawable/wall_4</item>

        <!--فعال کردن قابلیت افکت حرکت محتوا و صفحات-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>


    <!--تنظیم انیمیشن اکتیویتی ها در کل برنامه-->
